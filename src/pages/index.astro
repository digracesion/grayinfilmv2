---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const supportMe = [
  { name: 'Ko-Fi', url: 'https://ko-fi.com/grayinfilm' },
  { name: 'Hashnode', url: 'https://digracesion.hashnode.dev/sponsor' },
];
---

<Layout
  title='Home'
  pageTitle='Gray in Film |Â Home'
  description='Gray In Film Home Page'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Me</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Gray in <a
                class='text-white'
                target='_blank'
                href='https://astro.build/'>Film</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              Hi, this is Gray! Welcome to my website.
            </p>
            <Button target={'_self'} href='/blog/'>
              Read my blogposts &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Support Me!
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              supportMe.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            <a href="https://linktr.ee/grayinfilm">Gray</a>
          </h2>
          <p class='poppins'>
            I am just a random person working in the IT industry to be honest, nothing much of note here. I like talking about Tech, Language Learning, Photography, and Living life as a Filipino expat in Japan.
              
            When I am not mindlessly scrolling through social media, you can find me at a photowalk, a language exchange event, or right beside a vending machine and drinking 100-yen coffee.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
